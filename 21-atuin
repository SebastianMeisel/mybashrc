# Initialize Atuin shell history tool if not in Globe environment
# Atuin provides improved shell history with sync and search capabilities
# Skipped if ~/.globe exists (different environment/configuration)
if [[ ! -f ~/.globe ]]
  then 
    # Load ble.sh
    [[ -f ~/.local/share/blesh/ble.sh ]] && source ~/.local/share/blesh/ble.sh
    # Source bash-preexec if available (required for Atuin)
    [[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh
    # Initialize Atuin for bash
    eval "$(atuin init bash)"
fi
