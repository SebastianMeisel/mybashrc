# define variables for color codes
R="\33[31m" # Red
G="\33[32m" # Green
Y="\33[33m" # Yellow
B="\33[34m" # Blue
M="\33[35m" # Magenta
C="\33[36m" # Cyan
N="\33[0m" # Normal

# Always provide some of these codes to awk.
# Set Output Field Separator to tabulator.
alias awk='awk -v r=$R -v g=$G -v y=$Y -v n=$N -v OFS="	"'
